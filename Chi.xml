        <Size x="20" y="20"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Shadow" atlas="uf-roguecp-bg-shadow" useAtlasSize="true" texelSnappingBias="0.0" snapToPixelGrid="false" alphaMode="BLEND">
					<Anchors>
						<Anchor point="CENTER" x="0" y="-4"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="1">
				<Texture parentKey="Background" atlas="uf-chi-bg" useAtlasSize="true" texelSnappingBias="0.0" snapToPixelGrid="false" alphaMode="BLEND">
