				</Texture>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture parentKey="Point" atlas="uf-chi-icon" useAtlasSize="true" texelSnappingBias="0.0" snapToPixelGrid="false" alphaMode="BLEND">
